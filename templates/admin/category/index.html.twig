{% extends 'base.html.twig' %}
{% block title 'Catégories' %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 m-0">Catégories</h1>
    <a class="btn btn-primary btn-sm" href="{{ path('admin_category_new') }}">Nouvelle</a>
</div>
<div class="table-responsive shadow-sm">
<table class="table table-striped align-middle mb-0">
    <thead class="table-light"><tr><th>ID</th><th>Nom</th><th></th></tr></thead>
    <tbody>
        {% for c in categories %}
            <tr>
                <td class="text-muted">{{ c.id }}</td>
                <td>{{ c.name }}</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('admin_category_edit',{id:c.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('admin_category_delete',{id:c.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer cette catégorie ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('del_cat_'~c.id) }}">
                        <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
